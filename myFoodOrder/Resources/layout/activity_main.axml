<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">
    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginLeft="55dp" />
    <ImageButton
        android:id="@+id/btn_fb"
        android:background="@drawable/btn_fb"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_below="@id/logo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp" />
    <ImageButton
        android:id="@+id/btn_tw"
        android:background="@drawable/btn_tw"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_below="@id/logo"
        android:layout_toRightOf="@id/btn_fb"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />
    <ImageView
        android:id="@+id/img_usr"
        android:src="@drawable/im_usr"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#E5E7E8"
        android:layout_below="@id/btn_fb"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp" />
    <EditText
        android:id="@+id/ed_email"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:textColor="#969696"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="15dp"
        android:layout_below="@id/btn_fb"
        android:layout_marginTop="7dp"
        android:background="#E5E7E8"
        android:layout_toRightOf="@id/img_usr" />
    <ImageView
        android:id="@+id/img_pwd"
        android:src="@drawable/im_pwd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="#E5E7E8"
        android:layout_below="@id/img_usr"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp" />
    <EditText
        android:id="@+id/ed_pwd"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:textColor="#969696"
        android:hint="Password"
        android:textSize="15dp"
        android:inputType="textPassword"
        android:background="#E5E7E8"
        android:layout_below="@id/ed_email"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/img_pwd" />
    <Button
        android:id="@+id/btn_login"
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:background="#DF3629"
        android:text="Log in"
        android:textColor="#FFF5FF"
        android:textAllCaps="false"
        android:layout_below="@id/img_pwd"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp" />
    <TextView
        android:id="@+id/txt_register"
        android:layout_width="210dp"
        android:layout_height="20dp"
        android:text="Register"
        android:gravity="center_horizontal"
        android:textSize="12dp"
        android:textColor="#DF3629"
        android:layout_below="@id/btn_login"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:linksClickable="true" />
    <TextView
        android:id="@+id/txt_forgot"
        android:layout_width="210dp"
        android:layout_height="15dp"
        android:text="I've forgotten my password?"
        android:gravity="center_horizontal"
        android:textSize="9dp"
        android:textColor="#424242"
        android:layout_below="@id/txt_register"
        android:layout_marginLeft="20dp" />
</RelativeLayout>