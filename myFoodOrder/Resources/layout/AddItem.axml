<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:gravity="center">
    <Spinner
        android:id="@+id/spinnerHotelName"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:background="#E5E7E8" />
    <EditText
        android:id="@+id/edtItemName"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:textColor="#969696"
        android:hint="Item Name"
        android:textSize="15dp"
        android:layout_marginTop="7dp"
        android:background="#E5E7E8"
        android:layout_below="@id/spinnerHotelName" />
  <Spinner
        android:id="@+id/spinnerImage"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:layout_marginTop="7dp"
        android:background="#E5E7E8"
        android:layout_below="@id/edtItemName"/>
    <EditText
        android:id="@+id/edtPrice"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:textColor="#969696"
        android:hint="Price"
        android:textSize="15dp"
        android:layout_marginTop="7dp"
        android:background="#E5E7E8"
        android:layout_below="@id/spinnerImage" />
    <EditText
        android:id="@+id/edtDesc"
        android:layout_width="210dp"
        android:layout_height="30dp"
        android:textColor="#969696"
        android:hint="Description"
        android:textSize="15dp"
        android:layout_marginTop="7dp"
        android:background="#E5E7E8"
        android:layout_below="@id/edtPrice" />
    <Button
        android:id="@+id/btnAddMenuItem"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:background="#DF3629"
        android:text="Add"
        android:textColor="#FFF5FF"
        android:textAllCaps="false"
        android:layout_below="@id/edtDesc"
        android:layout_marginTop="50dp" />
</RelativeLayout>